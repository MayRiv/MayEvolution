using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

namespace MayEvolutionModels
{
  /// <summary>
  /// Description of Map.
  /// </summary>
  class Map
  {
      public Randomizer:Random{get;}
      public Entities:list[Entity]{get;set;}
      public ChangeWorld():void
      {
         foreach(entity in Map.Instance.Entities)
          {
               _ = entity.ChangeState();
          }
          def alive = (e:Entity)=>{!e.Dead;};
          Entities = Entities.Filter(alive); 
          
      }
      public Init():void
      {
          Map.Instance.Entities = Forest(0.5f,0.7f)::Human(0.1f, 0.2f,/*coords*/
                                                           0.8f,/*strength*/
                                                           0.2f,/*speed*/
                                                           7f,/*viewRadius*/
                                                           8,/*breedingCycle*/
                                                           0.3f,/*hungerFear*/
                                                           0.2f/*hungerSpeed*/)::Human(0.1f, 0.3f,/*coords*/
                                                                                       0.1f,/*strength*/
                                                                                       0.1f,/*speed*/
                                                                                       1f,/*viewRadius*/
                                                                                       10,/*breedingCycle*/
                                                                                       0.5f,/*hungerFear*/
                                                                                       0.2f/*hungerSpeed*/)::[];
      }
      static public  Instance: Map
      {
         get
         {
             when (instance == null) instance = Map();
             instance;
         }
      }
        
      private this()
      {
          this.Randomizer = Random();
      }
      static private mutable instance:Map;
  }
}
